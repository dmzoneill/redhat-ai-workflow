[flake8]
# Line length - match Black's default
max-line-length = 120

# Exclude directories
exclude =
    .venv,
    .git,
    __pycache__,
    .pytest_cache,
    *.egg-info,
    build,
    dist,
    .claude,
    extensions/*,
    tests/*,
    node_modules,
    */node_modules/*

# McCabe complexity
max-complexity = 15

# Ignore codes:
# - B010: setattr with constant is necessary for decorator introspection
# - W503: line break before binary operator (PEP 8 recommended style)
ignore = B010,W503

# Show source code for errors
show-source = true

# Count errors
count = true

# Statistics
statistics = true
