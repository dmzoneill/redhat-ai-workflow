{
  "threshold": 25,
  "reporters": ["html", "console"],
  "ignore": [
    "**/node_modules/**",
    "**/.venv/**",
    "**/venv/**",
    "**/__pycache__/**",
    "**/backup/**",
    "**/*.pyc",
    "**/.git/**",
    "**/dist/**",
    "**/build/**",
    "**/out/**",
    "**/.cursor/**",
    "**/.claude/**",
    "**/docs/commands/**",
    "**/docs/skills/**"
  ],
  "format": ["python", "javascript", "typescript"],
  "min-lines": 10,
  "min-tokens": 50
}
